<%- include( '../template/cabecera', {tituloPage:'pagina de mascota'} ) %>

	<div class="container">

		<a class='btn btn-success btn-block my-4' href='/mascota/crear'>
			Agregar
		</a>

		<% if ( arrayMascotas.length > 0 ) { %>
			<table class="table">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th scope="col">Nombre</th>
			      <th scope="col">Descripcion</th>
			      <th scope="col">Accion</th>
			    </tr>
			  </thead>
			  <tbody>
				<% arrayMascotas.forEach( items =>{ %>
				    <tr>
				      <th scope="row"><%= items.id %></th>
				      <td><%= items.nombre %></td>
				      <td><%= items.descripcion %></td>
				      <td>
				      	<a href="/mascota/<%= items.id %>" class="btn btn-warning btn-block my-2"> Modificar</a>
				      </td>
				    </tr>
				  <% }); %>
			  </tbody>
			</table>
			
		<% } %>
		

	</div>

<%- include('../template/footer' ) %>